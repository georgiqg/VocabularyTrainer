@page
@model VocabularyTrainer.Pages.Genders.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Gender</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Gender.GenderId" />
            <div class="form-group">
                <label asp-for="Gender.GenderName" class="control-label"></label>
                <input asp-for="Gender.GenderName" class="form-control" />
                <span asp-validation-for="Gender.GenderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender.GenderColor" class="control-label"></label>
                <div class="d-flex flex-nowrap">
                    <div class="flex-column">
                        <select asp-for="Gender.GenderColor" class="form-control" asp-items="Model.colors" onchange="changeSampleColor()">
                            <option value="">-Select-</option>
                        </select>
                    </div>
                    <div class="sample flex-column">
                        Example: <div id="sample-item" class="circle flex-column"></div>
                    </div>
                </div>
                <span asp-validation-for="Gender.GenderColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
